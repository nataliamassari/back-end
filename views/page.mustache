<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Futebol Elite</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
</head>
   
<body class="backgroundcolor">
 <header>
        <div class="container-fluid header row justify-content-between">
        <div class="col-3" >
         <img  class="col-1 logotipo" src="https://logomaker.designfreelogoonline.com/media/productdesigner/logo/resized/000903_Free_Futbol_Club_Logo_Maker-03.png" alt="Logotipo" class="img-fluid">
            <a class="col-2 title" href="/">FUTEBOL ELITE</a>
        </div>
         <button type="button" class="btn btn-outline-light col-1 loginbutton" onclick="redirectToLoginRoute()">Entrar</button>
        </div>
    </header>
    <div class="container-fluid d-flex align-items-center justify-content-center vhsettings vh-100">
        <div class="col-3 cardstyle text-center">
            <img src="{{page.imgUrl}}" alt="{{page.name}}" class="imgSize"/>
            <h2>{{page.name}}</h2>
            <i>{{page.description}}</i>
            <br><br>
            <b>Classificação {{page.classificationText}}</b>
            <br><br>
            <button type="button backButton" onclick="window.location.href = '/'">Voltar</button>
        </div>
    </div>
     <script>
        function redirectToLoginRoute() {
            window.location.href = '/login'
        }

        function redirectToCreateRoute() {
            window.location.href = '/create'
        }

        function redirectToManageRoute() {
            window.location.href = '/pageManager'
        }

        function redirectToMenuRoute() {
            window.location.href = '/'
        }

        function setClassification(num){
            switch(num){
                case 1:
                    return "A",
                case 2:
                    return "B",
                case 3:
                    return "C",
                case 4:
                    return "D"
                break;
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
